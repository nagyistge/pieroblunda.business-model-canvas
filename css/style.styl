html, body
    height 100%

body
  margin 0px
  padding 0px
  width 100%
  position absolute

h2
  font-size 18px
  cursor pointer
  small
    display block

textarea
  width 100%
  max-width 100%
  outline 0
  border 0

nav
  .list-unstyled
    li
      margin-left 10px
      float right
      i
        &.fa
          cursor pointer

.container-fluid
  margin-left 40px

.col-md-20, .col-lg-20
  width 20%

.btn-bars
  height 35px
  width 35px
  background-color #CECECE
  position absolute
  top -18px
  left -18px
  a
    line-height 35px
    color #FFF
    
div
  &.tooltip[role="tooltip"]
    width 300px
    font-weight 200
    z-index 9999999999
    .tooltip-inner
      text-align left
      ul
        list-style none
        margin 0
        padding 0
        li
          margin 0 0 5px 0
          padding 0

.hint-container
  z-index 999999
  top 0
  right 0
  position fixed

