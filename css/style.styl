._history, ._help
  padding-bottom 80px

._contact
  form
    margin-top 30px
    input, textarea
      padding 30px 0 30px 20px
      font-size 22px
      &.form-control
        box-shadow none
        &:hover, &:focus
          border: 1px solid #4BA93C;
          outline: none;
._about
  .mod-social
    a
      margin-right 15px

._view, ._canvas
  .col-lg-6:first-child
    display none
  .col-lg-6:last-child
    width 100%
._edit
  .col-lg-6:last-child
    border 1px solid #CCC
    overflow-y scroll
  textarea
    border 1px solid #CCC
    height calc(100% - 60px)
    
@media only screen and (min-width : 320px)
  div, section
    border 0
    
  section
    display block
    
  .col-md-20
    width 100%
    
@media only screen and (min-width : 768px)
  .col-md-20
    width 20%
  
  .col-md-2, .col-md-4, .col-md-6, .col-md-12
    border 1px solid black
    
  .box
    background-color #FFF
    border-top: 0;
    border-bottom: 0;

  #row-up
    height 60vh
    border-bottom 2px solid black

    .box:last-child
      border-right 0
      
  #row-up
    section
      &.half-box
        height 50%
        position absolute
        border 0
        overflow-y scroll
        &.bottom
          border-top 2px solid black
          bottom 0
          
  #row-up div.box, #row-up section.box
    height 100%
    overflow-y scroll

  #row-down
    height 40vh
    section
      &.box
        height 100%
        overflow-y scroll
    .box:last-child
      border-right 0