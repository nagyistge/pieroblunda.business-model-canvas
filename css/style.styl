html, body
    height 100%

body
  margin 0px
  padding 0px
  width 100%
  position absolute

h2
  font-size 18px
  cursor pointer
  small
    display block

textarea
  width 100%
  max-width 100%
  outline 0
  border 0

*[fullscreen]
  textarea
    display none

nav
  .list-unstyled
    li
      margin-left 10px
      float right
      i
        &.fa
          cursor pointer

div[fullscreen]
  position relative
  i
    &.fa
      &.fa-arrows-alt
        position absolute
        top 0
        right 0
        cursor pointer

.container-fluid
  margin-left 40px
        
.col-md-2, .col-md-4, .col-md-6, .col-md-12
  border 1px solid black

.col-md-20
  width 20%

.btn-bars
  height 35px
  width 35px
  background-color #CECECE
  position absolute
  top -18px
  left -18px
  a
    line-height 35px
    color #FFF
    
div
  &.tooltip[role="tooltip"]
    width 300px
    font-weight 200
    z-index 9999999999
    .tooltip-inner
      text-align left
      ul
        list-style none
        margin 0
        padding 0
        li
          margin 0 0 5px 0
          padding 0

.hint-container
  z-index 999999
  top 0
  right 0
  position fixed

.box
  background-color #FFF
  border-top: 0;
  border-bottom: 0;

#row-up
  height 60vh
  border-bottom 2px solid black
  section
    &.half-box
      height 50%
      position absolute
      border 0
      overflow-y scroll
      &.bottom
        border-top 2px solid black
        bottom 0
  .box:last-child
    border-right 0

#row-up div.box, #row-up section.box
  height 100%
  overflow-y scroll

#row-down
  height 40vh
  section
    &.box
      height 100%
      overflow-y scroll
  .box:last-child
    border-right 0

.fullscreen
  position absolute
  left 0
  top 0
  background-color #CECECE
  display block
  width 100% !important
  height 100vh
  padding 14px
  z-index 1
  border 0
  overflow-x hidden
  div
    &.MdPreview-html
      margin-left 3%
      padding-left 1%
      padding-right 1%
      border 1px solid #000
      height 100%

.fullscreen textarea, .fullscreen div.MdPreview-html
  float left
  width 47%
  max-width 47%
  display block

._history, ._help
  padding-bottom 80px

._contact
  form
    margin-top 30px
    input, textarea
      padding 30px 0 30px 20px
      font-size 22px
      &.form-control
        box-shadow none
        &:hover, &:focus
          border: 1px solid #4BA93C;
          outline: none;
._about
  .mod-social
    a
      margin-right 15px

._view, ._canvas
  .col-lg-6:first-child
    display none
  .col-lg-6:last-child
    width 100%
._edit
  .col-lg-6:last-child
    border 1px solid #CCC
    overflow-y scroll
  textarea
    border 1px solid #CCC
    height calc(100% - 60px)